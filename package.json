{
  "name": "dotoli",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "bash .githooks/install.sh || true",
    "build": "turbo --filter=!@dotoli/storybook build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "fix": "turbo lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css}\"",
    "clean": "find ./ -type d \\( -name '.turbo' -o -name 'dist' -o -name 'storybook-static' -o -name 'node_modules' \\) | xargs rm -rf && find ./ -type f -name '*.tsbuildinfo' | xargs rm -f",
    "reset": "pnpm clean && pnpm install && pnpm build",
    "hooks": "pnpm --filter=@bbodek/hooks",
    "sb": "pnpm --filter=@dotoli/storybook",
    "ut": "pnpm --filter=@bbodek/utils",
    "in": "pnpm --filter=@bbodek/internal-ui",
    "release:build": "pnpm turbo run build --filter=!@dotoli/storybook --filter=!@dotoli/rollup-config --filter=!@dotoli/typescript-config --filter=...[HEAD^1]",
    "release": "pnpm changeset publish",
    "release:install": "pnpm install --no-frozen-lockfile",
    "release:notify": "node .github/scripts/slack-notification.js",
    "storybook:install": "pnpm release:install --filter=!storybook --no-link-workspace-packages && pnpm release:install --filter=storybook"
  },
  "devDependencies": {
    "@bbodek/prettier-config": "workspace:*",
    "@changesets/cli": "^2.29.7",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": "@bbodek/prettier-config"
}
