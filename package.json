{
  "name": "dotoli",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,css}\"",
    "hooks": "pnpm --filter=@bbodek/hooks",
    "hooks:build": "turbo --filter=@bbodek/hooks build",
    "hooks:publish": "pnpm hooks build && cd apps/hooks && npm publish",
    "sb": "pnpm --filter=storybook",
    "storybook": "pnpm sb dev",
    "storybook:build": "pnpm sb build",
    "utils": "pnpm --filter=@bbodek/utils",
    "utils:build": "turbo --filter=@bbodek/utils build",
    "utils:publish": "pnpm utils build && cd apps/utils && npm publish",
    "internal": "pnpm --filter=@bbodek/internal-ui",
    "internal:build": "turbo --filter=@bbodek/internal-ui build",
    "internal:publish": "pnpm internal build && cd apps/internal-ui && npm publish"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3",
    "@dotoli/prettier-config": "workspace:*"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": "@dotoli/prettier-config"
}
